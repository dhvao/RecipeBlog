{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ingredient": {
      "id": "/ingredient",
      "title": "ingredients",
      "description": "ingredients and recipe",
      "type": "object",
      "properties": {
        "name": {
          "description": "Optional short text summary of recipe",
          "type": "string"
        },
        "amount": {
          "description": "Amount of ingredient",
          "type": "string"
        },
        "recipe_id": {
          "description": "ID of the associated recipe",
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["name", "amount", "recipe_id"],
      "additionalProperties": false
    }
  }
}
